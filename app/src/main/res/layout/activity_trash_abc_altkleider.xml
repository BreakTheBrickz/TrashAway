<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".AddLocation">

    android:id="@+id/tv_add_location_title"

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altkleider und Schuhe"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <!-- Input fields and dropdowns -->


    <!-- Back button -->
    <LinearLayout
        android:id="@+id/ll_inputs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_back_abc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_location_title"
        app:layout_constraintVertical_bias="0.2">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dos_altkleider_schuhe"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginBottom="16dp"
                android:background="#CF4CAF50"
                android:text="Do's"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dos_altkleider_schuhe_list"
                android:layout_width="wrap_content"
                android:layout_height="194dp"
                android:lineSpacingExtra="4dp"
                android:text="@string/dos_list_altkleider_und_schuhe"
                android:textSize="18sp" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/donts_altkleider_schuhe"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginBottom="16dp"
                android:background="#ED8588"
                android:text="Dont's"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/donts_altkleider_schuhe_list"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/donts_list_altkleider_und_schuhe"
                android:textSize="18sp" />

        </ScrollView>


    </LinearLayout>

    <Button
        android:id="@+id/btn_back_abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="64dp"
        android:padding="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>