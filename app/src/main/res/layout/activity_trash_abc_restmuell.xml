<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".AddLocation">


    <!-- Title -->
    <TextView
        android:id="@+id/tv_add_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RestmÃ¼ll"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <!-- Input fields and dropdowns -->


    <!-- Back button -->
    <LinearLayout
        android:id="@+id/ll_inputs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_back_abc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_location_title"
        app:layout_constraintVertical_bias="0.2">


        <TextView
            android:id="@+id/dos_restmuell"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginBottom="16dp"
            android:background="#CF4CAF50"
            android:text="Do's"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dos_restmuell_list"
                android:layout_width="wrap_content"
                android:layout_height="194dp"
                android:lineSpacingExtra="4dp"
                android:text="@string/dos_list_restmuell"
                android:textSize="18sp" />

        </ScrollView>

        <TextView
            android:id="@+id/donts_restmuell"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginBottom="16dp"
            android:background="#ED8588"
            android:text="Dont's"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/donts_restmuell_list"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/donts_list_restmuell"
                android:textSize="18sp" />

        </ScrollView>


    </LinearLayout>

    <Button
        android:id="@+id/btn_back_abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/black"
        android:padding="12dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>